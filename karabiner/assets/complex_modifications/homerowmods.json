{
  "title": "Home Row Modifiers",
  "rules": [
    {
      "description": "Remap a to left_shift when held",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "a"
          },
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 250,
            "basic.to_if_held_down_threshold_milliseconds": 250
          },
          "to_if_alone": [
            {
              "key_code": "a"
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "left_shift"
            }
          ]
        }
      ]
    },
